<div class="tab-pane fade" id="add-pelapor" role="tabpanel" aria-labelledby="profile-tab">

        <div class="card shadow mb-4 mt-2">
          <div class="card-body">
            <form action="/admin/pelapor" method="POST" enctype="multipart/form-data">
              <div class="row">
                  <div class="col font-weight-bold mb-4 mt-2">
                    Info Data Diri
                </div>
              </div>
                
              <div class="form-group">
                <label for="name">Nomor Handphone</label>
                <div class="row">
                  <div class="col">
                    <div class="row">
                      <div class="col">
                        <input type="text" class="form-control" name="nohp" placeholder="Masukkan Nomor Handphone" required>
                      </div>
                      <div class="col">
                      </div>
                    </div>
                  </div>
                  <div class="col">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="name">Nama</label>
                <input type="text" class="form-control" name="nama" placeholder="Masukkan Nama" required>
              </div>
              <div class="form-group">
                <label for="name">Jenis Kelamin</label>
                <select class="form-control" name="jenisKelamin">
                  <option value="">- Pilih Jenis Kelamin -</option>
                  <% 
                  let jenisKelamin = ["Laki-laki", "Perempuan"];

                  for(let i = 0; i< jenisKelamin.length; i++){ %>
                    <option value="<%= jenisKelamin[i] %>"><%= jenisKelamin[i] %></option>
                    <%}%>
                </select>
              </div>
              <div class="form-group">
                <label for="name">Usia</label>
                <div class="row">
                  <div class="col">
                    <div class="row">
                      <div class="col">
                        <div class="row">
                          <div class="col">
                            <input type="text" class="form-control" name="usia" placeholder="Masukkan Usia" required>
                          </div>
                          <div class="col">
                          <label for="">tahun</label>
                          </div>
                        </div>
                      </div>
                      <div class="col">
                      </div>
                    </div>
                  </div>
                  <div class="col">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col font-weight-bold mb-4 mt-2">
                  Info Data Vaksinasi
              </div>
            </div>
              <div class="row">
                <div class="col mx-6">
                  <div class="form-group">
                    <label for="name">Tanggal Vaksinasi (Dosis 1)</label>
                    <input type="date" class="form-control" name="tglvaksin1" placeholder="Masukkan Usia" required>
                  </div>
                  <div class="form-group">
                    <label for="name">Jenis Vaksin (Dosis 1)</label>
                    <select class="form-control" name="categoryId1">
                      <option value="">- Jenis Vaksin -</option>
                      <% for(let i = 0; i< category.length; i++){ %>
                        <option value="<%= category[i].id %>"><%= category[i].name %></option>
                        <%}%>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="name">Tempat Vaksinasi (Dosis 1)</label>
                    <input type="text" class="form-control" name="tmptvaksin1" placeholder="Masukkan Nama" required>
                  </div>
                  <div class="form-group">
                    <label for="name">Keluhan Pasca Vaksinasi (Dosis 1)</label>
                    <textarea name="about1" class="form-control"></textarea>
                  </div>
                </div>

                <div class="col mx-6">
                    <div class="form-group">
                      <label for="name">Tanggal Vaksinasi (Dosis 2)</label>
                      <input type="date" class="form-control" name="tglvaksin2" placeholder="Masukkan Usia" required>
                    </div>
                    <div class="form-group">
                      <label for="name">Jenis Vaksin (Dosis 2)</label>
                      <select class="form-control" name="categoryId2">
                        <option value="">- Jenis Vaksin -</option>
                        <% for(let i = 0; i< category.length; i++){ %>
                          <option value="<%= category[i].id %>"><%= category[i].name %></option>
                          <%}%>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="name">Tempat Vaksinasi (Dosis 2)</label>
                      <input type="text" class="form-control" name="tmptvaksin2" placeholder="Masukkan Nama" required>
                    </div>
                    <div class="form-group">
                      <label for="name">Keluhan Pasca Vaksinasi (Dosis 2)</label>
                      <textarea name="about2" class="form-control"></textarea>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="name">Deskripsi tambahan</label>
                <textarea name="about" class="form-control"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Save</button>
            </form>
          </div>
        </div>
      

</div>